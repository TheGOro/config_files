#!/bin/sh
#
# $FreeBSD: ports/multimedia/ffmpeg-011/files/ffserver-011.in,v 1.1 2012/08/06 12:52:46 mm Exp $
#

# PROVIDE: ffserver-011
# REQUIRE: NETWORKING
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable ffserver:
#
#ffserver_011_enable="YES"
#
ffserver_011_enable="${ffserver_011_enable-NO}"

. /etc/rc.subr

name=ffserver_011
rcvar=ffserver_011_enable

command="/usr/local/bin/${name} &"
required_files=/usr/local/etc/ffserver-011.conf

load_rc_config ${name}
run_rc_command "$1"
